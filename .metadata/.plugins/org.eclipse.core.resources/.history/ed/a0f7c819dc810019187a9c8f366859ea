simple Txc
{
    parameters:
        bool sendMsgOnInit = default(false);
        int limit = default(2);
        @display("i=block/routing");
    gates:
        input in;
        output out;
}

simple Tic extends Txc {
    parameters:
        sendMsgOnInit = true;
        @display("i=,cyan");
}
        

network Tictoc
{
    @display("bgb=400,415");
    submodules:
        tic: Txc {
            parameters:
                sendMsgOnInit = true;
                @display("i=,cyan"); // do not change the icon (first arg of i=) just colorize it
        }
        toc: Txc {
            parameters:
                sendMsgOnInit = false;
                @display("i=,gold");
        }
    connections:
        tic.out --> {  delay = 100ms; } --> toc.in;
        tic.in <-- {  delay = 100ms; } <-- toc.out;
}
